[alias]
    a  = add
    b  = branch
    c  = commit
    co = checkout
    d  = diff
    dc = diff --cached
    dd = difftool --dir-diff
    s  = status
    p  = pull
    cc = ! git rev-parse HEAD | pbcopy

[core]
    autocrlf = input
    excludesfile = ~/.gitignore
    pager = less -R

[credential]
    helper = cache

[include]
    path = ~/.gitconfig.local

[init]
    defaultBranch = main

[push]
    default = current
	autoSetupRemote = true

[pull]
    rebase = true

[rebase]
    autoStash = true

[user]
    name = Jonathan Gruber
