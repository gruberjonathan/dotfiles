[alias]
    a  = add
    b  = branch
    c  = commit
    co = checkout
    d  = diff
    dc = diff --cached
    dd = difftool --dir-diff
    s  = status
    p  = pull

[core]
    autocrlf = input
    excludesfile = ~/.gitignore

[credential]
    helper = cache

[diff]
    tool = meld

[difftool "diffpdf"]
    cmd = diffpdf "$LOCAL" "$REMOTE"

[init]
    defaultBranch = main

[push]
    default = current

[pull]
    rebase = true

[rebase]
    autoStash = true

[user]
    name = Jonathan Gruber
    email = gruberjonathan@gmail.com
