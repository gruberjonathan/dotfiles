[alias]
    a  = add
    b  = branch
    c  = commit
    co = checkout
    d  = diff
    dd = difftool --dir-diff
    s  = status
    p  = push

[core]
    autocrlf = input

[credential]
    helper = /usr/lib/git-core/git-credential-gnome-keyring

[diff]
    tool = meld

[difftool]
    prompt = false

[push]
    default = simple

